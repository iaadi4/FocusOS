{
  "manifest_version": 3,
  "name": "FocusOS",
  "version": "1.0.0",
  "description": "Track your web activity beautifully.",
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "idle",
    "alarms",
    "webNavigation",
    "notifications"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "FocusOS",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
