{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "FocusOS",
  "browser_specific_settings": {
    "gecko": {
      "id": "{7b320d9e-1e43-4a8f-8d9b-9c7a6e5b4f81}",
      "strict_min_version": "109.0"
    }
  },
  "description": "Track your web activity beautifully.",
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "idle",
    "alarms",
    "webNavigation",
    "notifications"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "FocusOS",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
